/*** mc_loader.fla   frame 1, Actions layer ***/import mx.transitions.Tween;import mx.transitions.easing.*;// variable declarationsvar percent:Number;var URL:String = "http://pluto.palomar.edu/002257106/swf/slideshow_astro.swf"; //"large1.swf";var container_mc:MovieClip;var ls_mc:MovieClip;var tracker_mcl:MovieClipLoader = new MovieClipLoader();var imOK:Boolean;var listener:Object = new Object();// function declarations// event callback handlerslistener.onLoadProgress = function (mc:MovieClip, loaded:Number, total:Number) {    percent = Math.round(loaded/total*100);}function progressDisplay(prop:String, oldVal:Number, newVal:Number, userdata:Object):Number {    userdata.clip_mc._xscale = newVal;    userdata.display_txt.text = newVal.toString();    if (newVal >= 100) {        this.unwatch(prop);        var tweenHandler:Object = new Tween(userdata.clip_mc._parent, "_alpha", Regular.easeIn, 100, 0, 1, true);        tweenHandler.onMotionFinished = function() {            userdata.clip_mc._parent.removeMovieClip();        }    }    updateAfterEvent();    return newVal;}// initial frame actionsls_mc = this.attachMovie("loadStatus", "loadStatus_mc", 10000);ls_mc._x = Stage.width/2;ls_mc._y = Stage.height/2 - 20;container_mc = this.createEmptyMovieClip("large_mc", 0);tracker_mcl.addListener(listener);imOK = tracker_mcl.loadClip( URL, container_mc );this.watch("percent", progressDisplay, {clip_mc:loadStatus_mc.pb_mc, display_txt:loadStatus_mc.percentage_txt});container_mc.swapDepths(-16384);