/*** mc_loader.fla   frame 1, Actions layer ***/import mx.transitions.Tween;import mx.transitions.easing.*;// variable declarationsvar URL:String = "http://pluto.palomar.edu/002257106/swf/slideshow_astro.swf"; //"large1.swf";var container_mc:MovieClip;var ls_mc:MovieClip;var tracker_mcl:MovieClipLoader = new MovieClipLoader();var listener:Object = new Object();// function declarations// event callback handlerslistener.onLoadProgress = function (mc:MovieClip, loaded:Number, total:Number) {    var percent:Number = Math.round(loaded/total*100);    loadStatus_mc.pb_mc._xscale = percent;    loadStatus_mc.percentage_txt.text = percent.toString();    updateAfterEvent();}listener.onLoadComplete = function (mc:MovieClip) {    var tweenHandler:Object = new Tween(loadStatus_mc, "_alpha", Regular.easeIn, 100, 0, 1, true);    tweenHandler.onMotionFinished = function() {        loadStatus_mc.removeMovieClip();    }    }// initial frame actionsls_mc = this.attachMovie("loadStatus", "loadStatus_mc", 10000);ls_mc._x = Stage.width/2;ls_mc._y = Stage.height/2 - 20;container_mc = this.createEmptyMovieClip("large_mc", 0);listener.loadStatus_mc = ls_mc;tracker_mcl.addListener(listener);tracker_mcl.loadClip( URL, container_mc );container_mc.swapDepths(-16384);